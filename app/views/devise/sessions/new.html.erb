<% provide :title, "Sign In" %>
<% content_for :body_class, "login-page" %>
<% content_for :footer_class, "footer" %>

<div class="page-header header-filter" style="background: url(<%= asset_path 'bg7.jpg' %>); background-size: cover; background-position: top center;">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-sm-6 ml-auto mr-auto">
        <div class="card card-signup">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form") do |f| %>
            <div class="card-header card-header-primary text-center">
              <h4 class="card-title">Sign In</h4>
              <div class="social-line">
                <a href="#pablo" class="btn btn-just-icon btn-link">
                  <i class="fa fa-facebook-square"></i>
                </a>
                <a href="#pablo" class="btn btn-just-icon btn-link">
                  <i class="fa fa-twitter"></i>
                </a>
                <a href="#pablo" class="btn btn-just-icon btn-link">
                  <i class="fa fa-google-plus"></i>
                </a>
              </div>
            </div>
            <p class="description text-center">Or Be Classical</p>
            <div class="card-body">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="material-icons">email</i>
                </span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email..." %>
              </div>
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="material-icons">lock_outline</i>
                </span>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password..." %>
              </div>
              <% if devise_mapping.rememberable? -%>
                <div class="form-check">
                  <label class="form-check-label">
                    <%= f.check_box :remember_me, class: "form-check-input" %>
                    <span class="form-check-sign">
                      <span class="check"></span>
                    </span>
                    <%= f.label :remember_me %>
                  </label>
                </div>
              <% end -%>
            </div>
            <div class="footer text-center">
              <%= f.submit "Sign In", class:"btn btn-primary btn-link btn-wd btn-lg" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
